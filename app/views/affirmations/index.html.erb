
<h1 class="text-lg text-medium bg-slate-200 mb-5">Daily Affirmation List</h1>

<div class="flex items-center">
  <ul>
    <% @affirmations.each do |affirmation| %>
      <li><%= affirmation.url %> | <%= affirmation.translation %> | <%= link_to "Edit", edit_affirmation_path(affirmation) %> | <%= link_to "Delete", affirmation_path(affirmation), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
    <% end %>
  </ul>
</div>
<div class="flex items-left justify-left space-x-2">
  <div class="border border-2 border-slate-500 mt-3 w-[60px] text-center px-2 hover:bg-slate-100"><%= link_to "New", new_affirmation_path %></div>
  <div class="border border-2 border-slate-500 mt-3 w-[65px] text-center px-2 hover:bg-slate-100"><%= link_to "Home", root_path %></div>
</div>